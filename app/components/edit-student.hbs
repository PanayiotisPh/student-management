<h1>Edit Student {{@student.name}}</h1>
<div>
  <form {{on "submit" this.editStudent}}>

    <label for="name">Name:</label>
    {{input type="text" id="name" value=this.student.name}}
    <br><br>

    <label for="birth">Date Of Birth:</label>
    {{input type="date" id="birth" value=this.student.birth}}
    <br><br>

    <label for="class">Class:</label>
    <select id="class" {{on "change" this.updateClass}}>
        <option value="IT Class" selected={{if (eq this.student.class "IT Class") "selected"}}>
            IT Class
        </option>
        <option value="Math Class" selected={{if (eq this.student.class "Math Class") "selected"}}>
            Math Class
        </option>
        <option value="Literature Class" selected={{if (eq this.student.class "Literature Class") "selected"}}>
            Literature Class
        </option>
    </select>
    <br><br>

    <button type="submit">Edit</button>
    
  </form>
</div>